<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="application" class="net.xylophones.megaproxy.Application">
        <lookup-method name="createRequestProcessor" bean="requestProcessor"/>
    </bean>

    <bean 
        id="debugProxyPlugin" 
        class="net.xylophones.megaproxy.plugins.DebugProxyPlugin"
    />
    
    <bean 
        id="localFileProxyPlugin" 
        class="net.xylophones.megaproxy.plugins.LocalFileProxyPlugin"
    />

    <bean id="requestProcessor" class="net.xylophones.megaproxy.RequestProcessor" scope="prototype">
        <property name="proxyPlugins">
            <list>
                <ref bean="debugProxyPlugin"/>
                <ref bean="localFileProxyPlugin"/>
            </list>
        </property>
    </bean>

</beans>