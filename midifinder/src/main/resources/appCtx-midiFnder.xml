	<bean id="htmlUrlProcessor"
		  init-method="startInNewThread"
		  destroy-method="shutdown"
		  class="net.xylophones.midifinder.runner.HtmlUrlProcessor">
		<constructor-arg index="0" ref="urlService"/>
		<constructor-arg index="1">
			<bean class="net.xylophones.midifinder.http.IntervalDecoratingRetriever">
				<constructor-arg index="0">
					<bean class="net.xylophones.midifinder.http.HttpClientRetriever">
						<constructor-arg index="0" value="${application.user.agent}"/>
					</bean>
				</constructor-arg>
			</bean>
		</constructor-arg>
		<constructor-arg index="2">
			<bean class="net.xylophones.midifinder.util.ChildUrlParser">
				<constructor-arg index="0">
					<bean class="net.xylophones.midifinder.util.TagSoupHtmlTidier"/>
				</constructor-arg>
				<constructor-arg index="1">
					<bean class="net.xylophones.midifinder.util.XPathUrlParser"/>
				</constructor-arg>
				<constructor-arg index="2">
					<bean class="net.xylophones.midifinder.util.UrlCleaner"/>
				</constructor-arg>
			</bean>
		</constructor-arg>
		<constructor-arg index="3" value="${http.request.body.num.threads}"/>
		<constructor-arg index="4" value="${http.request.body.queue.size}"/>
	</bean>

</beans>
