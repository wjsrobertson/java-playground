<assembly xmlns="ttp://maven.apache.org/xsd/assembly" xsi:schemaLocation="http://maven.apache.org/xsd/assembly http://maven.apache.org/xsd/assembly-1.1.1.xsd">
  <id>bin</id>
  <formats>
    <format>tar.gz</format>
  </formats>
 <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
    </dependencySet>
  </dependencySets>
  <files>
     <file>
     <source>src/main/bin/midifinder.sh</source>
     <fileMode>0777</fileMode>
     </file>
  </files>
  <fileSets>
    <fileSet>
      <includes>
        <include>**/*</include>
        <include>midifinder.sh</include>
      </includes>
      <directory>src/main/bin</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <includes>
        <include>*.properties</include>
        <include>*.xml</include>
      </includes>
      <excludes>
        <exclude>appCtx-*.xml</exclude>
      </excludes>
      <outputDirectory>conf</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
